@model IEnumerable<ClinicaDentaria.Models.Sala>

@{
    ViewData["Title"] = "Salas";
}

<h2>Salas</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Sala
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Numero/@item.Codigo
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Editar</a> |
                <!--<a asp-action="Details" asp-route-id="@item.Id">Details</a> |-->
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
