    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Agenda</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Dentista
        </dt>
        <dd>
            @ViewData["Dentista"]
        </dd>
        <dt>
            Paciente
        </dt>
        <dd>
            @ViewData["Paciente"]
        </dd>
        <dt>
            Sala
        </dt>
        <dd>
            @ViewData["Sala"]
        </dd>
        <dt>
            Data Disponível
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataDisponivel)
