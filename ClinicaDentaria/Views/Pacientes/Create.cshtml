@model ClinicaDentaria.Models.Paciente

@{
    ViewData["Title"] = "Cadastro de Paciente";
}

<h2>Cadastro de Paciente</h2>

<h4>Paciente</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-md-5">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-7">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-8">
            <label asp-for="Endereco.Logradouro" class="control-label">Logradouro</label>
            <input asp-for="Endereco.Logradouro" class="form-control" />
            <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="Endereco.Numero" class="control-label">Numero</label>
            <input asp-for="Endereco.Numero" class="form-control" />
            <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <label asp-for="Endereco.Bairro" class="control-label">Bairro</label>
            <input asp-for="Endereco.Bairro" class="form-control" />
            <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Endereco.Cidade" class="control-label">Cidade</label>
            <input asp-for="Endereco.Cidade" class="form-control" />
            <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="Endereco.Estado" class="control-label">Estado</label>
            <select asp-for="Endereco.Estado" class="form-control">
                <option value="SP">SP</option>
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="Endereco.CEP" class="control-label">CEP</label>
            <input asp-for="Endereco.CEP" class="form-control" />
            <span asp-validation-for="Endereco.CEP" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Contato[0].Tipo" class="control-label">Tipo de Contato</label>
            <select asp-for="Contato[0].Tipo" class="form-control">
                <option value="R" selected>Residencial</option>
                <option value="C">Celular</option>
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="Contato[0].Telefone" class="control-label">Telefone</label>
            <input asp-for="Contato[0].Telefone" class="form-control" />
            <span asp-validation-for="Contato[0].Telefone" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="Contato[1].Tipo" class="control-label">Tipo de Contato</label>
            <select asp-for="Contato[1].Tipo" class="form-control">
                <option value="R">Residencial</option>
                <option value="C" selected>Celular</option>
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="Contato[1].Telefone" class="control-label">Telefone</label>
            <input asp-for="Contato[1].Telefone" class="form-control" />
            <span asp-validation-for="Contato[1].Telefone" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" value="Salvar" class="btn btn-default" />
    <a asp-action="Index" class="btn btn-default">Voltar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
