@model ClinicaDentaria.Models.Paciente

@{
    ViewData["Title"] = "Editar";
}

<h2>Edit</h2>

<h4>Paciente</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <input type="hidden" asp-for="Id" />
            <div class="col-md-5">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-md-7">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <input type="hidden" asp-for="Endereco.Id" />
            <div class="col-md-8">
                <label asp-for="Endereco.Logradouro" class="control-label">Logradouro</label>
                <input asp-for="Endereco.Logradouro" class="form-control" />
                <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label asp-for="Endereco.Numero" class="control-label">Numero</label>
                <input asp-for="Endereco.Numero" class="form-control" />
                <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Endereco.Bairro" class="control-label">Bairro</label>
                <input asp-for="Endereco.Bairro" class="form-control" />
                <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Endereco.Cidade" class="control-label">Cidade</label>
                <input asp-for="Endereco.Cidade" class="form-control" />
                <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label asp-for="Endereco.Estado" class="control-label">Estado</label>
                <select asp-for="Endereco.Estado" class="form-control">
                    <option value="SP">SP</option>
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Endereco.CEP" class="control-label">CEP</label>
                <input asp-for="Endereco.CEP" class="form-control" />
                <span asp-validation-for="Endereco.CEP" class="text-danger"></span>
            </div>
        </div>
        @for (int i = 0; i < Model.Contato.Count(); i++)
        {
            <div class="form-group row">
                <div class="col-md-2">
                    <input type="hidden" asp-for="@Model.Contato[i].Id" />
                    <label asp-for="@Model.Contato[i].Tipo" class="control-label">Tipo de Contato</label>
                    <select asp-for="@Model.Contato[i].Tipo" class="form-control">
                        @if (Model.Contato[i].Tipo == 'R')
                        {
                            <option value="R" selected>Residencial</option>
                            <option value="C">Celular</option>
                        }
                        else
                        {
                            <option value="R">Residencial</option>
                            <option value="C" selected>Celular</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label asp-for="@Model.Contato[i].Telefone" class="control-label">Telefone</label>
                    <input asp-for="@Model.Contato[i].Telefone" class="form-control" />
                    <span asp-validation-for="@Model.Contato[i].Telefone" class="text-danger"></span>
                </div>
            </div>
        }
        <input type="submit" value="Salvar" class="btn btn-default" />
        <a asp-action="Index" class="btn btn-default">Voltar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
